{
  "compilerOptions": {
    "lib": ["ESNext"],
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noUncheckedSideEffectImports": true,
    "paths": {
      "git-extension": ["./@types/git.d.ts"],
      "github-api": ["./@types/github-api.d.ts"],
      "@heroku/app-json-schema": ["./@types/app-json-schema.d.ts"],
      "@heroku/elements": ["./@types/elements.d.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "out", "scripts"]
}
